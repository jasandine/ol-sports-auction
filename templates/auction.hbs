<div class="row">
  <section class="col-md-6">
      <h2>{{name}}</h2>
      <p>{{location}}</p>
      <p>{{date}}</p>
      <p>{{description}}</p>

      {{outlet}}
      {{#link-to 'new-lot' classNames="btn btn-primary"}}Add a new lot{{/link-to}}
    </section>

  <section class="col-md-6">
    <h2>Lots</h2>

    {{#each lot in lots}}
    <article>
      <h3>{{lot.title}}</h3>
      <p>{{lot.description}}</p>
      <button class="btn btn-xs btn-danger" {{action "deleteLot" lot}}>delete</button>
    </article>
    {{/each}}

  </section>
</div>

<div class="row">
  <section class="col-md-6">

  </section>
</div>
