<div class="row">
  <section class="col-md-6">
      <h2>{{name}}</h2>
      <p>{{location}}</p>
      <p>{{date}}</p>
      <p>{{description}}</p>
  </section>
  <section class="col-md-6">
    <h2>Lots</h2>

    {{#each lot in lots}}
    <p>{{lot.title}}</p>
    {{/each}}

  </section>
</div>

<div class="row">
  <section class="col-md-6">

    <h2>Add a new lot</h2>

    {{outlet}}

    {{#link-to 'new-lot' classNames="btn btn-primary"}}Add a new lot{{/link-to}}
  </section>
</div>
