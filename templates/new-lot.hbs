<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{textarea value=description id="description" class="form-control" rows="15"}}
  </div>
  <button class="btn btn-primary" {{action 'save'}}>Add</button>
</form>
